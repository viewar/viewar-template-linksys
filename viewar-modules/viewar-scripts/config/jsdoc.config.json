{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": "./src"
  },
  "plugins": [
    "node_modules/jsdoc-babel"
  ],
  "opts": {
    "destination": "./docs/",
    "recurse": true,
    "encoding": "utf8",
    "template": "node_modules/ink-docstrap/template"
  },
  "babel": {
    "plugins": ["transform-promise-to-bluebird", "transform-runtime"],
    "presets": ["stage-0", "bluebird"],
    "extensions": ["js"],
    "babelrc": false
  },
  "templates": {
    "theme": "simplex",
    "default": {
      "outputSourceFiles": false
    }
  }
}
